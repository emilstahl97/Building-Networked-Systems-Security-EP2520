# --- Ping ICMP Rules ---
#alert icmp any any -> 192.168.1.26 any (msg:"Pinging..."; sid:1000001;)
#alert icmp $HOME_NET any -> any any (msg:"Pinging..."; sid:1000001;)
alert icmp $EXTERNAL_NET any -> $HOME_NET any (msg:"Pinging..."; sid:1000001;)
#alert icmp $HOME_NET any -> any any (msg:"Pinging..."; sid:1000001;)

# --- FTP Rules ---
alert tcp 192.168.1.72 any -> $HOME_NET 21 (msg:"FTP connection attempt"; sid:1000002; rev:1;)
alert tcp any any -> $HOME_NET 21 (msg:"FTP failed login"; content:"Login or password incorrect"; sid:1000003; rev:1;)


